#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../._lite-server@2.3.0@lite-server/bin/lite-server" "$@"
  ret=$?
else 
  node  "$basedir/../._lite-server@2.3.0@lite-server/bin/lite-server" "$@"
  ret=$?
fi
exit $ret
